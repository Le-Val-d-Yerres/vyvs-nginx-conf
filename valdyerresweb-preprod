server
{
        listen 80;
        server_name     preprod.levaldyerres.fr;
        client_max_body_size 20M;

        auth_basic      "Site de developpement Val d'Yerres";
        auth_basic_user_file /etc/nginx/.htpasswd;

        access_log      /var/log/nginx/valdyerresweb-preprod_access.log;
        error_log       /var/log/nginx/valdyerresweb-preprod_error.log;

        gzip  on;
        gzip_http_version 1.1;
        gzip_vary on;
        gzip_comp_level 6;
        gzip_proxied any;
        gzip_types text/plain text/html text/css application/json application/x-javascript text/xml application/xml application/xml+rss text/javascript application/javascript text/x-js;
        gzip_buffers 16 8k;
        gzip_disable "MSIE [1-6]\.(?!.*SV1)";

        location /media
        {
                root /home/web/www/valdyerresweb-preprod/valdyerresweb/;
        }
        location /static
        {
                root /home/web/www/valdyerresweb-preprod/valdyerresweb;
        }

        location /
        {
                proxy_pass_header Server;
                proxy_set_header Host $http_host;
                proxy_redirect off;
                proxy_set_header X-Real-IP $remote_addr;
                proxy_set_header X-Scheme $scheme;
		proxy_set_header X-Forwarded-Host $server_name;
                proxy_connect_timeout 10;
                proxy_read_timeout 10;
                proxy_pass http://localhost:8081/;
        }


}

